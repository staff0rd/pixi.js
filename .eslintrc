{
  "extends": "eslint:recommended",
  "rules": {
    "no-console": 0,
    "no-debugger": 1,
    "arrow-spacing": 1,
    "prefer-const": [
      "warn",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ],
    "brace-style": [2, "allman"]
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true
  },
  "globals": {
    "PIXI": true,
    "Float32Array": true,
    "Uint16Array": true,
    "Uint8Array": true,
    "Uint32Array": true,
    "ArrayBuffer": true
  }
}
